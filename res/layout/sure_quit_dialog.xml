<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    style="@style/My_Theme_Dialog_Alert2"
    android:orientation="vertical" >

    <!-- 使用setView(View view)方式自定义loading时, 使用此layout -->

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@color/white"

        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
         >

        <RelativeLayout
            android:id="@+id/titler"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bule_bg">
            <TextView

                android:layout_width="260dp"
                android:layout_height="wrap_content"

                android:singleLine="true"
                android:text="温馨提示"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="22sp" />



            </RelativeLayout>
        <TextView
            android:id="@+id/title_msg"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titler"
            android:layout_marginTop="4dp"
            android:text="确定退出?"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"

            android:textColor="@color/textColor"
            android:textSize="20sp" />
<LinearLayout
    android:id="@+id/ck_rl"
    android:layout_below="@id/title_msg"
    android:layout_width="240dp"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
 <CheckBox
            android:id="@+id/ck"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     
 
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下次不再提示"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:textColor="@color/navigation_bg"
        android:textSize="16sp"/>
</LinearLayout>
        <LinearLayout
            android:id="@+id/body"
            android:layout_width="240dp"
            android:layout_height="38dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ck_rl"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/device_left_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/sure_bg"
                android:text="@string/comfirm_text"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/device_right_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@color/cancel_bg"
                android:text="@string/cancel_text"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>



    </RelativeLayout>



</LinearLayout>
